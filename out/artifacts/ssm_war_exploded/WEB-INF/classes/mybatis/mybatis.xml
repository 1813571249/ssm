<?xml version="1.0" encoding="UTF-8" ?>
<!-- 这个文件是配置文件，命名方式是xx.xml文件即可 -->
<!DOCTYPE configuration  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd"> <!--规范文件-->
<!-- 添加数据库连接相关配置信息 -->
<configuration>

    <!-- 别名定义 -->
    <typeAliases>
        <!-- 批量别名定义:指定包名，MyBatis自动扫描包中类，自定义别名，别名就是类名（首字母大写小写都可以 -->
        <package name="po"/>
    </typeAliases>

    <!--加载映射文件:这里不需要配置-->
</configuration>